<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/frame_top_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.idatafox.learnwizard.LoginActivity"
    android:background="@drawable/bk"
    android:id="@+id/RA">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/ab">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:id="@+id/userName"
            android:hint="输入用户名"
            android:paddingTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:background="#28141709"
            android:textSize="16dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:id="@+id/userPassword"
            android:hint="输入用户密码"
            android:layout_below="@+id/userName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#28141709"
            android:textSize="16dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住用户名与密码"
                android:id="@+id/checkBox" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录"
                android:layout_marginLeft="46dp"
                android:id="@+id/button"
                android:layout_below="@+id/userPassword"
                android:layout_centerHorizontal="true"
                android:paddingLeft="20dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:weightSum="2"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ab"

        android:id="@+id/ac">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/reg_usercontract"
            android:id="@+id/textView4"
            android:clickable="true"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ee050902" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/reg_start"
            android:clickable="true"
            android:id="@+id/textView3"
            android:layout_marginLeft="50dp"
           android:layout_below="@+id/button"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="60dp"
            android:textColor="#000000" />

    </LinearLayout>

</RelativeLayout>
